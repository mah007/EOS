<odoo>
    <record id="view_employee_form_inherit_eos" model="ir.ui.view">
        <field name="name">hr.employee.form.eos.report</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="%(action_eos_leave_wizard)d" type="action" string="End of Service Report" class="oe_highlight" context="{'default_employee_id': active_id}"/>
            </xpath>
        </field>
    </record>
</odoo>
